generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
}

model OTP {
  id        String   @id @default(uuid())
  email     String   @unique
  otp       String
  expiresAt DateTime
}

